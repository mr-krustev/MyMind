<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - RightoGo</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/KendoCSS")
    @Styles.Render("~/Content/Notifications")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/kendoJS")
    @Scripts.Render("~/bundles/notifications");
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("RightoGo", "Index", "Home", new { area = string.Empty }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Articles", "All", "Articles", new { area = string.Empty }, null)</li>

                    @if (this.User.Identity.IsAuthenticated && this.User.IsInRole("Student"))
                    {
                        <li>@Html.ActionLink("Works", "Index", "Works", new { area = "Student" }, null)</li>
                    }

                    @if (this.User.Identity.IsAuthenticated && !this.User.IsInRole("Student") && !this.User.IsInRole("Teacher") && !this.User.IsInRole("Administrator"))
                    {
                        <li>@Html.ActionLink("Get Student Access", "GetAccess", "Students", new { area = string.Empty }, null)</li>
                    }
                    @if (this.User.Identity.IsAuthenticated && !this.User.IsInRole("Teacher") && !this.User.IsInRole("Administrator"))
                    {
                        <li>@Html.ActionLink("Get Teacher Access", "GetAccess", "Teachers", new { area = string.Empty }, null)</li>
                    }
                    @Html.Partial("_AdminLinksPartial")
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @Html.Partial("_NotificationPartial")
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - RightoGo</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
