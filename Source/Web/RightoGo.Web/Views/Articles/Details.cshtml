@model RightoGo.Web.ViewModels.Articles.ArticleViewModel
@{
    ViewBag.Title = "Details";
}

<div class="jumbotron">
    <h3>
        @Html.ActionLink((string)Model.Title, "Details", "Articles", new { area = string.Empty, id = @Model.Id }, null)
    </h3>
    <br />
    <small>
        @Html.ActionLink((string)Model.Topic.Value, "All", "Articles", new { area = string.Empty, filterByTopic = @Model.Topic.Value }, null)
    </small>
    <br />
    <div class="more">
        @Html.Raw(Model.SanitizedContent);
    </div>
    <br />
    @if (@Model.RelatedArticles.Count() > 0)
    {
        <div>
            Related to: @foreach (var relatedModel in @Model.RelatedArticles)
            {
                <span>@Html.ActionLink((string)relatedModel.Title, "Details", "Models", new { area = string.Empty, id = relatedModel.Id }, null)</span>
            }
        </div>
        <br />
    }
    <small>@Model.CreatedBy.UserName has writen this on @Model.CreatedOnFormated</small>
</div>